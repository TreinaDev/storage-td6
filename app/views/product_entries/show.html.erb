<div class="container py-3">
  <h1><%= t('.title') %></h1>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <h6 class="btn btn-primary"> 
      <%= link_to t('.back'), product_entries_path, class:"link-secondary text-decoration-none" %>
    </h6>
  </div>

  <div class="card" style="width: 20rem;">
    <h6 class="card-header"> Produto </h6>
    <div class="card-body">
      <p class="card-text">
        <%= "#{ProductEntry.human_attribute_name("sku")}: #{@product_entry.sku}" %>
      </p>
      <p class="card-text">
        <%= "#{ProductEntry.human_attribute_name("quantity")}: #{@product_entry.quantity}" %>
      </p>
      <p class="card-text">
        <%= "#{ProductEntry.human_attribute_name("invoice")}: #{@product_entry.invoice }" %>
      </p>
      <p class="card-text">
        <%= "#{ProductEntry.human_attribute_name("supplier_id")}: #{@product_entry.supplier_id}" %>
      </p>
    </div>
  </div>

  <div class="card" style="width: 20rem;">
    <h6 class="card-header"> Itens </h6>
    <div class="card-body">
      <div class="card-text">
        <% @product_entry.items.each do |item| %>
          <p> <%= "#{ProductEntry.human_attribute_name("item_code")}: #{item.code}" %> </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
