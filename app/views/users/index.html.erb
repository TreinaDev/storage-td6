<%= link_to t('.new_user'), new_user_path %>
<ul>
  <% @users.each do |user| %>
    <li>
      <div style="background: #e0ebeb; margin: 12px; padding: 5px; border-radius: 5px;">
        <p><%= User.human_attribute_name(:name) %>:
        <%= user.name %>
        <p><%= User.human_attribute_name(:registration_code) %>: 
        <%= user.registration_code %></p>
        <% if user.warehouse %>
          <p><%= User.human_attribute_name(:warehouse_id) %>:
          <%= user.warehouse.name %></p>
        <% else %>
          <p><%= User.human_attribute_name(:warehouse_id) %>:
          <%= t('.no_warehouse') %></p>
        <% end %>
      </div>
    </li>
  <% end %>
  
</ul>